@model EmployeeManagement.ViewModels.UserClaimsViewModel

<form method="post">
    <div class="card">
        <div class="card-header">
            Manage User Claims
        </div>
        <div class="card-body">
            @for(int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                    @Model.Claims[i].ClaimType
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width: auto" />
            <a asp-controller="Administration" asp-action="EditUser"
                asp-route-id="@Model.UserId" class="btn btn-secondary" style="width: auto">
            Cancel</a>
        </div>
    </div>
</form>

