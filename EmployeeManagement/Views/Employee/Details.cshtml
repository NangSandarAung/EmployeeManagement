@model EmployeeManagement.Models.Employee

@{
    string photoPath = "~/images/" + (Model.PhotoPath ?? "download.png");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>@Model.Name</h3>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee ID : @Model.Id</h4>
                <h4>Email : @Model.Email</h4>
                <h4>Department : @Model.Department</h4>
            </div>

            <div class="card-footer text-center">
                <form asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back</a>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger" 
                            onclick="return confirm('Are you sure you want to delete Employee: @Model.Name')">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>