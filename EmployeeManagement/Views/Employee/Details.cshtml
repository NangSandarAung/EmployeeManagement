@{
    Employee emp = (Employee)ViewData["emp"];
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>@emp.Name</h3>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/download.png" />

                <h4>Employee ID : @emp.Id</h4>
                <h4>Email : @emp.Email</h4>
                <h4>Department : @emp.Department</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>